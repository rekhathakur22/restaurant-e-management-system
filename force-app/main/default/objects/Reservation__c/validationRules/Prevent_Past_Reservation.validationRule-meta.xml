<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
  <fullName>Prevent_Past_Reservation</fullName>
  <active>true</active>
  <description>Prevent booking for past date and time</description>
  <errorConditionFormula>
    Reservation_DateTime__c &lt; NOW()
  </errorConditionFormula>
  <errorMessage>Reservation date and time cannot be in the past.</errorMessage>
  <errorDisplayField>Reservation_DateTime__c</errorDisplayField>
</ValidationRule>